@import common

body
	overflow hidden

iframe
	width 100%
	height 100%
	min-height 100%
	border 0px
	padding 0px
	margin 0px

#overlay
	position fixed
	// background-position top center
	// background-repeat no-repeat
	// background-size contain
	width 100%
	height 100%
	min-height 100%
	border 0px
	padding 0px
	background-color rgba(0,0,0,0.8)
	// margin auto
	z-index 10

#overlayimg
	display block
	max-height 100%
	max-width 100%
	margin auto


#iFrameContainer, iframe
	width 100%
	height 100%

