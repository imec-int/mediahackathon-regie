doctype html5
html
	head
		meta(name='viewport', content='initial-scale=1.0, user-scalable=no')
		title= title
		link(type='text/fonts', rel='stylesheet', src="/vendor/Roboto")

		link(rel='stylesheet', href="/stylesheets/controller.css")
		link(rel='stylesheet', href="/vendor/bootstrap.min.css")
		script(type='text/javascript', src='/vendor/jquery-min.js')
		script(type='text/javascript', src='/vendor/jquery.tmpl.min.js')
		script(type='text/javascript', src='/socket.io/socket.io.js')
		script(type='text/javascript', src='/vendor/bootstrap.min.js')
		script(type='text/javascript', src='/javascripts/controller.js')

	body
		.container

			.row
					h1 Hack Controller
			.hacks.row
				each hack in hacks
					.col-md-2
						button.hack.btn.btn-lg.btn-primary(id='#{hack.id}', onClick='controller.showhack("#{hack.id}");')
							span #{hack.title}
